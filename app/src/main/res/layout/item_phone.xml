<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/phone_item_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#757575"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/phone_1"/>

        <TextView
            android:id="@+id/phone_item_name"
            style="@style/AppTheme.Subheader"
            android:layout_width="match_parent"
            android:layout_height="33dp"

            android:layout_below="@+id/phone_item_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="-2dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="-3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:text="Foo's Bar" />

        <TextView
            android:id="@+id/phone_item_price"
            style="@style/AppTheme.Caption"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_alignTop="@id/phone_item_image"
            android:layout_alignBottom="@id/phone_item_image"

            android:layout_marginBottom="131dp"
            android:background="#6D3367D6"
            android:gravity="center_horizontal"

            android:textColor="#FFFFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="$$$" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>